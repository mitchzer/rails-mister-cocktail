<div><h1><%= @cocktail.name %></h1></div>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<div>
<h2>Doses:<h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %>: <%= dose.ingredient.name %></li>
  <% end %>
</ul>
</div>

<div><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></div>
<div><%= link_to "Back to cocktails' list", cocktails_path %></div>
